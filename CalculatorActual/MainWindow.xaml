<Window x:Class="CalculatorActual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorActual"
        mc:Ignorable="d"
        Title="Simple Calculator" Height="300" Width="250"
        ResizeMode="NoResize">



    <Window.Resources>
        <Style x:Key="CalcButtonsStyle">
            <Setter Property="Control.Background" Value="White"/>
            <Setter Property="Control.Width" Value="30"/>
            <Setter Property="Control.Height" Value="30"/>

        </Style>

    </Window.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>



        <!--the buttons will be here-->

        <Button Style="{StaticResource CalcButtonsStyle}" Margin="81,19,89,118" Grid.Row="1" Click="Button_9" x:Name="Button9">9</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="51,19,119,118" Grid.Row="1" Click="Button_8" x:Name="Button8">8</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="21,19,149,118" Grid.Row="1" Click="Button_7" x:Name="Button7">7</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="111,19,59,118" Grid.Row="1" Click="Button_AC" x:Name="ButtonAC">AC</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="81,49,89,88" Grid.Row="1" Click="Button_6" x:Name="Button6">6</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="51,49,119,88" Grid.Row="1" Click="Button_5" x:Name="Button5">5</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="21,49,149,88" Grid.Row="1" Click="Button_4" x:Name="Button4">4</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="111,49,59,88" Grid.Row="1" Click="Button_MC" x:Name="ButtonMC">MC</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="81,79,89,58" Grid.Row="1" Click="Button_3" x:Name="Button3">3</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="51,79,119,58" Grid.Row="1" Click="Button_2" x:Name="Button2">2</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="21,79,149,58" Grid.Row="1" Click="Button_1" x:Name="Button1">1</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="111,79,59,58" Grid.Row="1" Click="Button_Mem" x:Name="ButtonMem">Mem</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="21,109,149,28" Grid.Row="1" Click="Button_Comma" x:Name="ButtonComma">,</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="51,109,119,28" Grid.Row="1" Click="Button_0" x:Name="Button0">0</Button>
        <Button Style="{StaticResource CalcButtonsStyle}" Width="60" Margin="81,109,59,28" Grid.Row="1" Click="Button_Enter" x:Name="ButtonEnter">Enter</Button>
        
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="141,19,29,118" Grid.Row="1" Click="Button_Plus" x:Name="ButtonPlus" Content="+"/>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="141,49,29,88" Grid.Row="1" Click="Button_Minus" x:Name="ButtonSubtract" Content="-"/>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="141,79,29,58" Grid.Row="1" Click="Button_Multiply" x:Name="ButtonMultiply" Content="*"/>
        <Button Style="{StaticResource CalcButtonsStyle}" Margin="141,109,29,28" Grid.Row="1" Click="Button_Divide" x:Name="ButtonDivide" Content="/"/>




        <TextBlock x:Name="Display" TextAlignment="Right" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,41,0,0" Width="180"  />
        <TextBlock x:Name="MemoryDisplay" TextAlignment="Right" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,10,0,0" Width="180"  />
        



    </Grid>
</Window>

